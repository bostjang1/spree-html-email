body
{
  color: #222222;
  font-family: sans-serif;
}
a
{
  color: #222222;
  font-weight: bold;
}
h1, h2, h3, h4
{
  color: #3D78BA;  /* <%# #1c6586; %> */
  font-weight: normal;
}
h1
{
  font-size: 22px;
  margin: 15px 0;
}
p
{
  margin: 10px 0;
}

small
{
  color: #666666;
  font-size: 13px;
}
#wrapper
{
  background: white;
  box-shadow: 4px 5px 4px #666655;
  margin: 10px auto;
  padding: 20px 40px 40px;
  width: 560px;
  border: 15px solid #5F92CB; /* <%# #91d4e1; %> */
}
#logo
{
  width: 100%;
  text-align: center;
  margin: 10px 0 30px 0;
}
footer
{
  font-size: 11px;
}
table
{
  border: 1px solid #dddddd;
  border-collapse: collapse;
  display: table;
  margin-bottom: 5px;
  width: 100%;
}
table .number
{
  min-width: 50px;
  text-align: right;
}
table th
{
  background: #5F92CB; /* <%# #91d4e1; %> */
  color: white;
  font-weight: bold;
  padding: 7px 10px;
}
table tr.alt td
{
  background: #eeeeee;
}
table td
{
  border-bottom: 1px solid #dddddd;
  padding: 6px 10px;
}
table td.name
{
  min-width: 160px;
}
table td.qty
{
  text-align: center;
  min-width: 35px;
}
table td.price, table td.total
{
  min-width: 65px;
}
table td.title, table td.subtotal
{
  font-weight: bold;
}
table.split td
{
  width: 50%;
}
#order_total
{
  font-weight: bold;
}
#subtotal-row td, #order-total td
{
  border-top: solid 2px #dddddd;
}
#addresses
{
  width: 560px;
}
#addresses .address
{
  width: 270px;
}
#addresses .address#billing
{
  float: left;
}
#addresses .address#shipping
{
  float: right;
}
.address
{
  border: 1px solid #cccccc;
  border-bottom-color: #aaaaaa;
  border-right-color: #aaaaaa;
  margin: 10px 0;
}
.address h2
{
  background: #1155dd;
  color: white;
  display: block;
  font-size: 16px;
  margin: 0;
  padding: 8px;
  text-shadow: #222222 1px 1px 0px;
}
.address .details
{
  padding: 10px;
}
.address .full-name
{
  font-weight: bold;
}